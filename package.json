    "prettier": "1.15.3",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.4.4",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix --syntax=scss",
      "git add"
    ],
    "*.{ts,scss,html,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
